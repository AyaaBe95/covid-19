<!DOCTYPE html>
<html lang="en">

    <%- include('../layout/head') %>


    <body>
        <header>
            <%- include('../layout/header') %>

            
        </header>
        <main>
            <section class="info">
                <% data.forEach(val => { %>
                    <div>
                        <h1><%= val.country %> </h1>
                        <p>Total Confirmed: <%= val.totalconfirmed %>  </p>
                        <p>Total Deaths: <%= val.totaldeaths %>  </p>
                        <p>Total Recovered: <%= val.totalrecovered %>  </p>
                        <p>Date: <%= val.date %>  </p>

                        <form action="/myRecords" method="POST">
                            <input type="hidden" name="country" value="<%= val.country %>">
                            <input type="hidden" name="totalconfirmed" value="<%= val.totalconfirmed %>">
                            <input type="hidden" name="totaldeaths" value="<%= val.totaldeaths %>">
                            <input type="hidden" name="totalrecovered" value="<%= val.totalrecovered %>">
                            <input type="hidden" name="date" value="<%= val.date %>">
                            <input type="submit" value="Add to Records" class="button">

                        </form>

                    </div>
                 
                <% }) %>
                

                   
    
    
            </section>
            
        </main>
        <footer></footer>
        </body>
        </html>